{
  "name": "amigurumi-store-web",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:storefront": "vite --config apps/storefront/vite.config.ts",
    "dev:admin": "vite --config apps/admin/vite.config.ts",
    "build:storefront": "vite build --config apps/storefront/vite.config.ts",
    "build:admin": "vite build --config apps/admin/vite.config.ts",
    "preview:storefront": "vite preview --config apps/storefront/vite.config.ts --host",
    "preview:admin": "vite preview --config apps/admin/vite.config.ts --host",
    "lint": "eslint \"apps/**/*.{ts,tsx}\" \"packages/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@amigurumi/api": "0.1.0",
    "@amigurumi/config": "0.1.0",
    "@amigurumi/ui": "0.1.0",
    "axios": "^1.7.7",
    "react": "19.0.0-rc.1",
    "react-dom": "19.0.0-rc.1",
    "react-router-dom": "6.26.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "typescript": "^5.5.4",
    "vite": "^5.4.6"
  }
}
